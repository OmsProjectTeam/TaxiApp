                    <h4 class="box-title">@ResourceWeb.LBAddEditBointChooseUsHomeContent</h4>
                    <!-- /.box-title -->



                    <div class="card-content">
                        <form role="form" method="post" asp-controller="BointChooseUsHomeContent" asp-action="Save" enctype="multipart/form-data">
