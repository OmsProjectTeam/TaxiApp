                                <span style="color:red"> <strong>@TempData["ErrorSave"]</strong></span>
                            </div>
                            <div class="card-content">
                                <div class="row small-spacing">                                  
                                    <div class="col-lg-6 col-xs-6">
                                        <label asp-for="@Model.BointChooseUsHomeContent.TitelOneAr" for="exampleInputEmail1">@ResourceWeb.LbTitelOneAr</label>
                                        <input asp-for="@Model.BointChooseUsHomeContent.TitelOneAr" type="text" placeholder="@ResourceWeb.LbTitelOneAr ...." class="form-control" maxlength="150">
                                        <span asp-validation-for="@Model.BointChooseUsHomeContent.TitelOneAr" class="text-danger"></span>
                                    </div>
                                    <div class="col-lg-6 col-xs-6">
                                        <label asp-for="@Model.BointChooseUsHomeContent.FirstDescriptionAr" for="exampleInputEmail1">@ResourceWeb.LbFirstDescriptionAr</label>
                                        <textarea asp-for="@Model.BointChooseUsHomeContent.FirstDescriptionAr" type="text" placeholder="@ResourceWeb.LbFirstDescriptionAr...." class="form-control" maxlength="1500" rows="8"></textarea>
                                        <span asp-validation-for="@Model.BointChooseUsHomeContent.FirstDescriptionAr" class="text-danger"></span>

                                    </div>
                                </div>
                            </div>
                            <div class="card-content">
                                <div class="row small-spacing">
                                    <div class="col-lg-6 col-xs-6">
                                        <label asp-for="@Model.BointChooseUsHomeContent.TitelOneEn" for="exampleInputEmail1">@ResourceWeb.LbTitelOneEn</label>
                                        <input asp-for="@Model.BointChooseUsHomeContent.TitelOneEn" type="text" placeholder="@ResourceWeb.LbTitelOneEn ...." class="form-control">
                                        <span asp-validation-for="@Model.BointChooseUsHomeContent.TitelOneEn" class="text-danger"></span>

                                    </div>
                                    <div class="col-lg-6 col-xs-6">
                                        <label asp-for="@Model.BointChooseUsHomeContent.FirstDescriptionEn" for="exampleInputEmail1">@ResourceWeb.LbFirstDescriptionEn</label>
                                        <textarea asp-for="@Model.BointChooseUsHomeContent.FirstDescriptionEn" type="text" placeholder="@ResourceWeb.LbFirstDescriptionEn...." class="form-control" maxlength="1500" rows="8"></textarea>
                                        <span asp-validation-for="@Model.BointChooseUsHomeContent.FirstDescriptionEn" class="text-danger"></span>

                                    </div>
                                </div>
                            </div>
                            <div class="card-content">
                                <div class="row small-spacing">
                                    <div class="col-lg-6 col-xs-6">
                                        <label asp-for="@Model.BointChooseUsHomeContent.TitelOneKr1" for="exampleInputEmail1">@ResourceWeb.LbTitelOneKr1</label>
                                        <input asp-for="@Model.BointChooseUsHomeContent.TitelOneKr1" type="text" placeholder="@ResourceWeb.LbTitelOneKr1 ...." class="form-control" maxlength="150">
                                        <span asp-validation-for="@Model.BointChooseUsHomeContent.TitelOneKr1" class="text-danger"></span>

                                    </div>
                                    <div class="col-lg-6 col-xs-6">
                                        <label asp-for="@Model.BointChooseUsHomeContent.FirstDescriptionKr1" for="exampleInputEmail1">@ResourceWeb.LbFirstDescriptionKr1</label>
                                        <textarea asp-for="@Model.BointChooseUsHomeContent.FirstDescriptionKr1" type="text" placeholder="@ResourceWeb.LbFirstDescriptionKr1...." class="form-control" maxlength="1500" rows="8"></textarea>
                                        <span asp-validation-for="@Model.BointChooseUsHomeContent.FirstDescriptionKr1" class="text-danger"></span>

                                    </div>
                                </div>
                            </div>
                            <div class="card-content">
                                <div class="row small-spacing">
                                    <div class="col-lg-6 col-xs-6">
                                        <label asp-for="@Model.BointChooseUsHomeContent.TitelOneKr2" for="exampleInputEmail1">@ResourceWeb.LbTitelOneKr2</label>
                                        <input asp-for="@Model.BointChooseUsHomeContent.TitelOneKr2" type="text" placeholder="@ResourceWeb.LbTitelOneKr2 ...." class="form-control" maxlength="150">
                                        <span asp-validation-for="@Model.BointChooseUsHomeContent.TitelOneKr2" class="text-danger"></span>

                                    </div>
                                    <div class="col-lg-6 col-xs-6">
                                        <label asp-for="@Model.BointChooseUsHomeContent.FirstDescriptionKr2" for="exampleInputEmail1">@ResourceWeb.LbFirstDescriptionKr2</label>
                                        <textarea asp-for="@Model.BointChooseUsHomeContent.FirstDescriptionKr2" type="text" placeholder="@ResourceWeb.LbFirstDescriptionKr2...." class="form-control" maxlength="1500" rows="8"></textarea>
