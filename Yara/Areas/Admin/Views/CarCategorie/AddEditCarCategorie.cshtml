@model ViewmMODeElMASTER
@{
    ViewData["Title"] = ResourceWeb.LBAddEditCarCategorie;
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-lg-12 col-xs-12">
    <div class="box-content">
        <ul class="list-inline">
            <li class="margin-bottom-10"><a href="#"><button type="button" class="btn btn-primary btn-rounded btn-bordered waves-effect waves-light">@ResourceWeb.LBAddEditCarCategorie</button></a></li>/
            <li class="margin-bottom-10"><a asp-area="Admin" asp-controller="Home" asp-action="Index"><button type="button" class="btn btn-primary btn-rounded btn-bordered waves-effect waves-light">Admin Home</button></a></li>/
            <li class="margin-bottom-10"><a asp-area="" asp-controller="Home" asp-action="Index"><button type="button" class="btn btn-primary btn-rounded btn-bordered waves-effect waves-light">Home</button></a></li>


       
        </ul>
        <div class="row small-spacing">
            <div class="col-lg-6 col-xs-12">
                <div class="box-content card white">
                    <h4 class="box-title">@ResourceWeb.LBAddEditCarCategorie</h4>
                    <!-- /.box-title -->



                    <div class="card-content">
                        <form role="form" method="post" asp-controller="CarCategorie" asp-action="Save" enctype="multipart/form-data">
                            <div class="form-group">
                                <input type="hidden" asp-for="@Model.CarCategorie.DataEntry" class="form-control" value="@User.Identity.Name">
                                <input type="hidden" asp-for="@Model.CarCategorie.IdCarCategories" class="form-control">
                                <input type="hidden" asp-for="@Model.CarCategorie.DateTimeEntry" value="@DateTime.Now">
                                <input type="hidden" asp-for="@Model.returnUrl" id="url">
                               <div>
                                    <span style="color:royalblue"> <strong>@TempData["Saved successfully"]</strong></span>
                                    <span style="color:red"> <strong>@TempData["ErrorSave"]</strong></span>
                               </div>
                            </div>


                            <div class="card-content">
                                <div class="row small-spacing">
                                    <div class="col-lg-6 col-xs-6">
                                        <label asp-for="@Model.CarCategorie.CarCategorieAr" for="exampleInputEmail1">@ResourceWeb.LBCarCategorieAr</label>
                                        <input asp-for="@Model.CarCategorie.CarCategorieAr" type="text" placeholder="@ResourceWeb.LBCarCategorieAr ...." class="form-control" maxlength="150">
                                        <span asp-validation-for="@Model.CarCategorie.CarCategorieAr" class="text-danger"></span>
                                        <span style="color:red"><strong>@TempData["Message"]</strong></span>
                                    </div>
                                    <div class="col-lg-6 col-xs-6">
                                        <label asp-for="@Model.CarCategorie.CarCategorieEn" for="exampleInputEmail1">@ResourceWeb.LbCarCategorieEn</label>
                                        <input asp-for="@Model.CarCategorie.CarCategorieEn" type="text" placeholder="@ResourceWeb.LbCarCategorieEn ...." class="form-control">
                                        <span asp-validation-for="@Model.CarCategorie.CarCategorieEn" class="text-danger"></span>
                                    </div>
                                </div>

                            </div>
                            <div class="card-content">
                                <div class="row small-spacing">
                                    <div class="col-lg-6 col-xs-6">
                                        <label asp-for="@Model.CarCategorie.CarCategorieKr1" for="exampleInputEmail1">@ResourceWeb.LbCarCategorieKr1</label>
                                        <input asp-for="@Model.CarCategorie.CarCategorieKr1" type="text" placeholder="@ResourceWeb.LbCarCategorieKr1 ...." class="form-control" maxlength="150">
                                        <span asp-validation-for="@Model.CarCategorie.CarCategorieKr1" class="text-danger"></span>
                                    </div>
                                    <div class="col-lg-6 col-xs-6">
                                        <label asp-for="@Model.CarCategorie.CarCategorieKr2" for="exampleInputEmail1">@ResourceWeb.LbCarCategorieKr2</label>
                                        <input asp-for="@Model.CarCategorie.CarCategorieKr2" type="text" placeholder="@ResourceWeb.LbCarCategorieKr2 ...." class="form-control" maxlength="150">
                                        <span asp-validation-for="@Model.CarCategorie.CarCategorieKr2" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                         
                            <div class="card-content">
                                <div class="row small-spacing">
                                    <div class="col-lg-6 col-xs-6">
                                        <div class="checkbox margin-bottom-20">
                                            <div class="switch success"><input type="checkbox" asp-for="@Model.CarCategorie.Active" id="switch-9" checked="checked"><label for="switch-9">@ResourceWeb.LbActive</label></div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-xs-6">
                                        <div class="checkbox margin-bottom-20">
                                            <div class="switch success"><input type="checkbox" asp-for="@Model.CarCategorie.CurrentState" id="switch-10" checked="checked"><label for="switch-10">@ResourceWeb.lbCurrentState</label></div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="card-content">
                                <div class="form-group">
                                    <p><input type="file" accept="image/*" name="Files" id="file" onchange="loadFile(event)" style="display: none;"></p>
                                    <p><label class="btn btn-violet btn-rounded btn-bordered waves-effect waves-light" for="file" style="cursor: pointer;" name="Files">@ResourceWeb.LBUpload_image</label></p>
                                    <p><img id="output" width="450" height="300" /></p>
                                    <span style="color:red"><strong>@TempData["Message"]</strong></span>
                                </div>
                            </div>


                            <button type="submit" class="btn btn-primary btn-sm waves-effect waves-light">@ResourceWeb.lbSave</button>

                        </form>
                    </div>
                    <!-- /.card-content -->
                </div>
                <!-- /.box-content -->
            </div>
            <div class="col-lg-6 col-xs-12">
                <div class="box-content card white">
                    <h4 class="box-title">@ResourceWeb.lbOldeAndUserGide</h4>
                    <!-- /.box-title -->
                    <div class="card-content">
                        <div class="form-group">
                            <img src="~/images/user gide/CarCategorie.png" width="1920" height="1077" />
                        </div>
                    </div>
                    <!-- /.card-content -->
                </div>
                <!-- /.box-content -->
            </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.box-content -->
</div>

@section Scripts {
    <script>
        var loadFile = function (event) {
            var image = document.getElementById('output');
            image.src = URL.createObjectURL(event.target.files[0]);
        };
    </script>
    <script>
        $("#url").val(window.location.href);
    </script>
}

