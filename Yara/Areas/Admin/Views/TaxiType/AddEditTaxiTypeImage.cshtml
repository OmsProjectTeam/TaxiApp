@model ViewmMODeElMASTER
@{
    ViewData["Title"] = ResourceWeb.LBAddEditTaxiType;
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-lg-12 col-xs-12">
    <div class="box-content">
        <ul class="list-inline">
            <li class="margin-bottom-10"><a href="#"><button type="button" class="btn btn-primary btn-rounded btn-bordered waves-effect waves-light">@ResourceWeb.LBAddEditTaxiType</button></a></li>/
            <li class="margin-bottom-10"><a asp-area="Admin" asp-controller="Home" asp-action="Index"><button type="button" class="btn btn-primary btn-rounded btn-bordered waves-effect waves-light">Admin Home</button></a></li>/
            <li class="margin-bottom-10"><a asp-area="" asp-controller="Home" asp-action="Index"><button type="button" class="btn btn-primary btn-rounded btn-bordered waves-effect waves-light">Home</button></a></li>



        </ul>
        <div class="row small-spacing">
            <div class="col-lg-6 col-xs-12">
                <div class="box-content card white">
                    <h4 class="box-title">@ResourceWeb.LBAddEditTaxiType</h4>
                    <!-- /.box-title -->



                    <div class="card-content">
                        <form role="form" method="post" asp-controller="TaxiType" asp-action="Save" enctype="multipart/form-data">
                            <div class="form-group">
                                <input type="hidden" asp-for="@Model.TaxiType.DataEntry" class="form-control" value="@User.Identity.Name">
                                <input type="hidden" asp-for="@Model.TaxiType.IdTaxiType" class="form-control">
                                <input type="hidden" asp-for="@Model.TaxiType.DateTimeEntry" value="@DateTime.Now">
                                <input type="hidden" asp-for="@Model.returnUrl" id="url">
                                <input type="hidden" asp-for="@Model.TaxiType.Photo" >
                                <div>
                                    <span style="color:royalblue"> <strong>@TempData["Saved successfully"]</strong></span>
                                    <span style="color:red"> <strong>@TempData["ErrorSave"]</strong></span>
                                </div>
                            </div>


                            <div class="card-content">
                                <div class="row small-spacing">
                                    <div class="col-lg-6 col-xs-6">
                                        <label asp-for="@Model.TaxiType.TaxiTypeAr" for="exampleInputEmail1">@ResourceWeb.LBTaxiTypeAr</label>
                                        <input asp-for="@Model.TaxiType.TaxiTypeAr" type="text" placeholder="@ResourceWeb.LBTaxiTypeAr ...." class="form-control" maxlength="150">
                                        <span asp-validation-for="@Model.TaxiType.TaxiTypeAr" class="text-danger"></span>
                                        <span style="color:red"><strong>@TempData["Message"]</strong></span>
                                    </div>
                                    <div class="col-lg-6 col-xs-6">
                                        <label asp-for="@Model.TaxiType.TaxiTypeEn" for="exampleInputEmail1">@ResourceWeb.LBTaxiTypeEn</label>
                                        <input asp-for="@Model.TaxiType.TaxiTypeEn" type="text" placeholder="@ResourceWeb.LBTaxiTypeEn ...." class="form-control">
                                        <span asp-validation-for="@Model.TaxiType.TaxiTypeEn" class="text-danger"></span>
                                    </div>
                                </div>

                            </div>
                            <div class="card-content">
                                <div class="row small-spacing">
                                    <div class="col-lg-6 col-xs-6">
                                        <label asp-for="@Model.TaxiType.TaxiTypeKr1" for="exampleInputEmail1">@ResourceWeb.LBTaxiTypeKr1</label>
                                        <input asp-for="@Model.TaxiType.TaxiTypeKr1" type="text" placeholder="@ResourceWeb.LBTaxiTypeKr1 ...." class="form-control" maxlength="150">
                                        <span asp-validation-for="@Model.TaxiType.TaxiTypeKr1" class="text-danger"></span>
                                    </div>
                                    <div class="col-lg-6 col-xs-6">
                                        <label asp-for="@Model.TaxiType.TaxiTypeKr2" for="exampleInputEmail1">@ResourceWeb.LBTaxiTypeKr2</label>
                                        <input asp-for="@Model.TaxiType.TaxiTypeKr2" type="text" placeholder="@ResourceWeb.LBTaxiTypeKr2 ...." class="form-control" maxlength="150">
                                        <span asp-validation-for="@Model.TaxiType.TaxiTypeKr2" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="card-content">
                                <div class="row small-spacing">
                                    <div class="col-lg-6 col-xs-6">
                                        <div class="checkbox margin-bottom-20">
                                            <div class="switch success"><input type="checkbox" asp-for="@Model.TaxiType.Active" id="switch-9" checked="checked"><label for="switch-9">@ResourceWeb.LbActive</label></div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-xs-6">
                                        <div class="checkbox margin-bottom-20">
                                            <div class="switch success"><input type="checkbox" asp-for="@Model.TaxiType.CurrentState" id="switch-10" checked="checked"><label for="switch-10">@ResourceWeb.lbCurrentState</label></div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="card-content">
                                <div class="form-group">
                                    <p><input type="file" accept="image/*" name="Files" id="file" onchange="loadFile(event)" style="display: none;"></p>
                                    <p><label class="btn btn-violet btn-rounded btn-bordered waves-effect waves-light" for="file" style="cursor: pointer;" name="Files">@ResourceWeb.LBUpload_image</label></p>
                                    <p><img id="output" width="450" height="300" /></p>
                                    <span style="color:red"><strong>@TempData["Message"]</strong></span>
                                </div>
                            </div>


                            <button type="submit" class="btn btn-primary btn-sm waves-effect waves-light">@ResourceWeb.lbSave</button>

                        </form>
                    </div>
                    <!-- /.card-content -->
                </div>
                <!-- /.box-content -->
            </div>
            <div class="col-lg-6 col-xs-12">
                <div class="box-content card white">
                    <h4 class="box-title">@ResourceWeb.lbOldeAndUserGide</h4>
                    <!-- /.box-title -->
                    <div class="card-content">
                        <div class="form-group">
                            <input type="hidden" asp-for="@Model.TaxiType.Photo" for="exampleInputEmail1"></input>
                            <p><img src="@string.Format("/Images/Home/{0}",Model.TaxiType.Photo)" id="output" width="450" height="300" /></p>
                        </div>
                        <div class="form-group">
                            <img src="~/images/user gide/TaxiType.png" width="1920" height="1077" />
                        </div>
                    </div>
                    <!-- /.card-content -->
                </div>
                <!-- /.box-content -->
            </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.box-content -->
</div>

@section Scripts {
    <script>
        var loadFile = function (event) {
            var image = document.getElementById('output');
            image.src = URL.createObjectURL(event.target.files[0]);
        };
    </script>
    <script>
        $("#url").val(window.location.href);
    </script>
}

