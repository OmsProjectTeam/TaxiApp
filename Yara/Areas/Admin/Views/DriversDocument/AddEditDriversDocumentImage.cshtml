@model ViewmMODeElMASTER
@{
    ViewData["Title"] = ResourceWeb.LBAddEditDriversDocument;
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-lg-12 col-xs-12">
    <div class="box-content">
        <ul class="list-inline">
            <li class="margin-bottom-10"><a href="#"><button type="button" class="btn btn-primary btn-rounded btn-bordered waves-effect waves-light">@ResourceWeb.LBAddEditDriversDocument</button></a></li>/
            <li class="margin-bottom-10"><a asp-area="Admin" asp-controller="Home" asp-action="Index"><button type="button" class="btn btn-primary btn-rounded btn-bordered waves-effect waves-light">Admin Home</button></a></li>/
            <li class="margin-bottom-10"><a asp-area="" asp-controller="Home" asp-action="Index"><button type="button" class="btn btn-primary btn-rounded btn-bordered waves-effect waves-light">Home</button></a></li>


            <span style="color:royalblue"> <strong>@TempData["Saved successfullyl"]</strong></span>
            <span style="color:red"> <strong>@TempData["ErrorSave"]</strong></span>
        </ul>
        <div class="row small-spacing">
            <div class="col-lg-6 col-xs-12">
                <div class="box-content card white">
                    <h4 class="box-title">@ResourceWeb.LBAddEditDriversDocument</h4>
                    <!-- /.box-title -->



                    <div class="card-content">
                        <form role="form" method="post" asp-controller="DriversDocument" asp-action="Save" enctype="multipart/form-data">
                            <div class="form-group">
                                <input type="hidden" asp-for="@Model.DriversDocument.DataEntry" class="form-control" value="@User.Identity.Name">
                                <input type="hidden" asp-for="@Model.DriversDocument.IdDriversDocument" class="form-control">
                                <input type="hidden" asp-for="@Model.DriversDocument.DateTimeEntry" value="@DateTime.Now">
                                <input type="hidden" asp-for="@Model.DriversDocument.Photo" />
                                <input type="hidden" asp-for="@Model.returnUrl" id="url">
                                <span style="color:royalblue"> <strong>@TempData["Saved successfully"]</strong></span>
                                <span style="color:red"> <strong>@TempData["ErrorSave"]</strong></span>
                            </div>
                            <div class="card-content">
                                <div class="row small-spacing">
                                    <div class="col-12 col-sm-4">
                                        <div class="form-group">
                                            <label asp-for="@Model.DriversDocument.IdDriverInformation" for="merchant-select">@ResourceWeb.LbDriverNameAr</label>
                                            <select id="merchant-select" class="form-control" asp-for="@Model.DriversDocument.IdDriverInformation" asp-items="@(new SelectList(ViewBag.DriverInformation, "IdDriverInformation", "DriverNameAr"))">
                                            </select>
                                            <span asp-validation-for="@Model.DriversDocument.IdDriverInformation" class="text-danger"></span>

                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-xs-6">
                                        <label asp-for="@Model.DriversDocument.Description" for="exampleInputEmail1">@ResourceWeb.LbDescription</label>
                                        <textarea asp-for="@Model.DriversDocument.Description" type="text" placeholder="@ResourceWeb.LbDescription...." class="form-control" maxlength="1500" rows="8"></textarea>
                                        <span asp-validation-for="@Model.DriversDocument.Description" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <p><input type="file" accept="image/*" name="Files" id="file" onchange="loadFile(event)" style="display: none;"></p>
                                <p><label class="btn btn-violet btn-rounded btn-bordered waves-effect waves-light" for="file" style="cursor: pointer;" name="Files">@ResourceWeb.LBUpload_image</label></p>
                                <p><img id="output" width="450" height="300" /></p>
                                <span style="color:red"><strong>@TempData["Message"]</strong></span>
                            </div>

                            <div class="checkbox margin-bottom-20">
                                <div class="switch success"><input type="checkbox" asp-for="@Model.DriversDocument.CurrentState" id="switch-10" checked="checked"><label for="switch-10">@ResourceWeb.lbCurrentState</label></div>
                            </div>
                            <button type="submit" class="btn btn-primary btn-sm waves-effect waves-light">@ResourceWeb.lbSave</button>
                        </form>
                    </div>
                    <!-- /.card-content -->
                </div>
                <!-- /.box-content -->
            </div>
            <div class="col-lg-6 col-xs-12">
                <div class="box-content card white">
                    <h4 class="box-title">@ResourceWeb.lbOldeAndUserGide</h4>
                    <!-- /.box-title -->
                    <div class="card-content">

                        <div class="form-group">
                            <input type="hidden" asp-for="@Model.DriversDocument.Photo" for="exampleInputEmail1"></input>
                            <p><img src="@string.Format("/Images/Home/{0}",Model.DriversDocument.Photo)" id="output" width="450" height="300" /></p>
                        </div>
                        <div class="form-group">
                            <img src="~/images/user gide/DriversDocument.png" width="1920" height="1077" />
                        </div>
                    </div>
                    <!-- /.card-content -->
                </div>
                <!-- /.box-content -->
            </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.box-content -->
</div>

@section Scripts {
    <script>
        var loadFile = function (event) {
            var image = document.getElementById('output');
            image.src = URL.createObjectURL(event.target.files[0]);
        };
    </script>
    <script>
        $("#url").val(window.location.href);
    </script>
}

